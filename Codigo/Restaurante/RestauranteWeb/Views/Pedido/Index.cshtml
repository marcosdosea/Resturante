@model IEnumerable<RestauranteWeb.Models.PedidoViewModel>

<p>
    <a asp-action="Create" class="btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraSolicitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraAtendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAtendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGarcom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraSolicitacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraAtendimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAtendimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGarcom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn-primary" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn-primary" })
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
